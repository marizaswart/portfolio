      %center
        %img.img-thumbnail{:src => "/images/mariza_head_photo.jpg", :style => "width:50%;height:50%;"}
          .social_media.bottom
          %a{:href => "https://www.facebook.com/mariza.swart", :target => "_blank", :title => "follow me on facebook"}
            %img{:alt => "follow me on facebook", :border => "0", :src => "https://c866088.ssl.cf3.rackcdn.com/assets/facebook30x30.png"}/
          %a{:href => "https://www.linkedin.com/in/mariza-swart/", :target => "_blank", :title => "follow me on LinkedIn"}
