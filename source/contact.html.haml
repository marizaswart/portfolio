    .contact
      %h3
        %strong Contact Me
      %p You are always welcome to contact me directly by email but you can leave your name, company and email address here.
      #frm1
        %form{:action => "http://formspree.io/mariza.swart@gmail.com", :method => "POST"}
        %input.form-control{:name => "email", :placeholder => "Your email", :type => "email"}/
        %br
        %textarea.form-control{:name => "message", :placeholder => "Your message"}
        %br
        %button.btn.btn-dark{:type => "submit"} Send
  .d-flex.justify-content-sm-between
    .cv_part1
      #container
        .cv
          - data.cv.each do |job|
            %h4= job[:position]
            %p= job[:date]
            %li= job[:item1]
            %li= job[:item2]
            %li= job[:item3]
            %br
    .skills
      %h3
        %strong Skills

      %p HTML
